# ===========================================
# EchoScribe Production Environment Variables
# ===========================================
#
# Copy this file to .env.production and fill in your actual values
# DO NOT commit .env.production to Git!
#

# -------------------------------------------
# Sentry Configuration (Production Only)
# -------------------------------------------
NEXT_PUBLIC_SENTRY_DSN=https://YOUR_DSN_HERE@oXXX.ingest.sentry.io/XXXX
SENTRY_ORG=your-organization-slug
SENTRY_PROJECT=echoscribe
SENTRY_AUTH_TOKEN=sntrys_YOUR_AUTH_TOKEN_HERE

# -------------------------------------------
# Firebase Production Configuration
# -------------------------------------------
NEXT_PUBLIC_FIREBASE_API_KEY=your-production-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-production-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id

# Disable emulator in production
NEXT_PUBLIC_USE_FIREBASE_EMULATOR=false

# -------------------------------------------
# Stripe Production Keys (LIVE MODE)
# -------------------------------------------
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_YOUR_LIVE_KEY_HERE
STRIPE_SECRET_KEY=sk_live_YOUR_LIVE_KEY_HERE
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET_HERE

# Stripe Price IDs (LIVE MODE)
STRIPE_PRICE_ID_STARTER_MONTHLY=price_LIVE_starter_id
STRIPE_PRICE_ID_PROFESSIONAL_MONTHLY=price_LIVE_professional_id
STRIPE_PRICE_ID_BUSINESS_MONTHLY=price_LIVE_business_id

# Legacy Pro tier (for backward compatibility)
STRIPE_PRICE_ID_PRO_MONTHLY=price_LIVE_professional_id

# -------------------------------------------
# Gemini API (use Firebase Secret Manager)
# -------------------------------------------
# DO NOT put Gemini API key here for production
# Use: firebase functions:secrets:set GEMINI_API_KEY
# GEMINI_API_KEY=will-use-secret-manager
